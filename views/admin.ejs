<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Remove User</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">AttendanceApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a id = "a" class="nav-item nav-link active" href="/users/register">Add New User<span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/users/delEmployee">Remove User</a>
            <a class="nav-item nav-link" href="/logout">LogOut</a>
            
          </div>
        </div>
      </nav>

      <div style="margin-top: 50px;">
      <table class="table table-hover container-md a">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Employee ID</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <% var counter=1; %>
          <% employeeList.forEach((emp) => { %>
          <tr>
            <th scope="row"><%= counter %></th>
            <td><a href="/users/admin/<%= emp.id %>"><%= emp.eid %></a></td>
            <td><a href="/users/admin/<%= emp.id %>"><%= emp.name %></a></td>
            <% counter++; %>
          </tr>
         <% }); %>
        </tbody>
      </table>
    </div>
</body>
</html>